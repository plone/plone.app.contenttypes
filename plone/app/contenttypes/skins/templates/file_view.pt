<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">

<body>

    <metal:content-core fill-slot="content-core">
        <metal:block define-macro="content-core"
                     tal:define="content_type context/file/contentType|nothing">
            <p>
                <a tal:content="context/file/filename"
                   tal:attributes="href string:${context/absolute_url}/@@download/file/${context/file/filename}">
                    File
                </a>
                <span class="discreet"
                      tal:define="size context/file/size;
                                  kb python:size/1024">
                      &mdash; <span tal:replace="kb" /> KB</span>
            </p>

            <div tal:condition="python: content_type.startswith('text')">
                <h2 i18n:translate="heading_file_contents">File contents</h2>
                <pre tal:content="context/file/data|nothing" />
            </div>
        </metal:block>
    </metal:content-core>

</body>

</html>
